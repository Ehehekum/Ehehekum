--// Notification System
-- Place in LocalScript or Module

local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

local NotifyUI = Instance.new("ScreenGui")
NotifyUI.Name = "CustomNotifyUI"
NotifyUI.ResetOnSpawn = false
NotifyUI.Parent = PlayerGui

-- Themes
local Themes = {
    ["Neon"] = {BG = Color3.fromRGB(25, 25, 35), Accent = Color3.fromRGB(0, 255, 200)},
    ["Dark"] = {BG = Color3.fromRGB(20, 20, 20), Accent = Color3.fromRGB(100, 100, 255)},
    ["Light"] = {BG = Color3.fromRGB(245, 245, 245), Accent = Color3.fromRGB(80, 80, 80)},
    ["Cyber"] = {BG = Color3.fromRGB(10, 10, 30), Accent = Color3.fromRGB(255, 50, 150)},
}

-- Function to create notification
local function CreateNotification(data, isOption)
    local Title = data.Title or "Notification"
    local Text = data.Text or ""
    local Duration = data.Duration or 5
    local Theme = Themes[data.Theme] or Themes["Neon"]

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0, 300, 0, isOption and 140 or 100)
    Frame.Position = UDim2.new(1, 10, 1, -120)
    Frame.BackgroundColor3 = Theme.BG
    Frame.BorderSizePixel = 0
    Frame.AnchorPoint = Vector2.new(1, 1)
    Frame.Parent = NotifyUI
    Frame.BackgroundTransparency = 0.1
    Frame.ClipsDescendants = true
    Frame.Visible = true
    Frame.ZIndex = 10

    local UICorner = Instance.new("UICorner", Frame)
    UICorner.CornerRadius = UDim.new(0, 12)

    local UIStroke = Instance.new("UIStroke", Frame)
    UIStroke.Thickness = 2
    UIStroke.Color = Theme.Accent

    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Size = UDim2.new(1, -20, 0, 30)
    TitleLabel.Position = UDim2.new(0, 10, 0, 5)
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Text = Title
    TitleLabel.TextColor3 = Theme.Accent
    TitleLabel.Font = Enum.Font.GothamBold
    TitleLabel.TextSize = 18
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    TitleLabel.Parent = Frame

    local TextLabel = Instance.new("TextLabel")
    TextLabel.Size = UDim2.new(1, -20, 0, 40)
    TextLabel.Position = UDim2.new(0, 10, 0, 35)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = Text
    TextLabel.TextWrapped = true
    TextLabel.TextColor3 = Theme.Accent
    TextLabel.Font = Enum.Font.Gotham
    TextLabel.TextSize = 15
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left
    TextLabel.TextYAlignment = Enum.TextYAlignment.Top
    TextLabel.Parent = Frame

    -- Option buttons
    local Button1, Button2
    if isOption then
        Button1 = Instance.new("TextButton")
        Button1.Size = UDim2.new(0.45, 0, 0, 30)
        Button1.Position = UDim2.new(0.05, 0, 1, -40)
        Button1.BackgroundColor3 = Theme.Accent
        Button1.TextColor3 = Color3.new(1, 1, 1)
        Button1.Text = data.Button1Text or "Yes"
        Button1.Font = Enum.Font.GothamBold
        Button1.TextSize = 14
        Button1.Parent = Frame
        Instance.new("UICorner", Button1)

        Button2 = Instance.new("TextButton")
        Button2.Size = UDim2.new(0.45, 0, 0, 30)
        Button2.Position = UDim2.new(0.5, 0, 1, -40)
        Button2.BackgroundColor3 = Theme.Accent
        Button2.TextColor3 = Color3.new(1, 1, 1)
        Button2.Text = data.Button2Text or "No"
        Button2.Font = Enum.Font.GothamBold
        Button2.TextSize = 14
        Button2.Parent = Frame
        Instance.new("UICorner", Button2)

        Button1.MouseButton1Click:Connect(function()
            if data.OnButton1 then data.OnButton1() end
            Frame:Destroy()
        end)

        Button2.MouseButton1Click:Connect(function()
            if data.OnButton2 then data.OnButton2() end
            Frame:Destroy()
        end)
    end

    -- Duration Bar
    local Bar = Instance.new("Frame")
    Bar.Size = UDim2.new(1, 0, 0, 4)
    Bar.Position = UDim2.new(0, 0, 1, -2)
    Bar.BackgroundColor3 = Theme.Accent
    Bar.BorderSizePixel = 0
    Bar.Parent = Frame
    local BarCorner = Instance.new("UICorner", Bar)
    BarCorner.CornerRadius = UDim.new(1, 0)

    TweenService:Create(Frame, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
        Position = UDim2.new(1, -10, 1, -10)
    }):Play()

    local barTween = TweenService:Create(Bar, TweenInfo.new(Duration, Enum.EasingStyle.Linear), {
        Size = UDim2.new(0, 0, 0, 4)
    })
    barTween:Play()

    task.delay(Duration, function()
        if Frame and Frame.Parent then
            TweenService:Create(Frame, TweenInfo.new(0.5), {
                Position = UDim2.new(1, 310, 1, -10)
            }):Play()
            task.wait(0.5)
            Frame:Destroy()
        end
    end)
end

-- Global API
getgenv().NotifyInfo = function(data)
    CreateNotification(data, false)
end

getgenv().NotifyOption = function(data)
    CreateNotification(data, true)
end
