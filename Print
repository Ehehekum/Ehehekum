-- Script file you upload to GitHub
-- Customizable notification using getgenv

local StarterGui = game:GetService("StarterGui")

local title = getgenv().NotifyTitle or "Notification"
local text = getgenv().NotifyText or "Default text"
local duration = getgenv().NotifyDuration or 5  -- seconds

StarterGui:SetCore("SendNotification", {
    Title = title;
    Text = text;
    Duration = duration;
})
