-- ThreeDUILibrary.lua
local ThreeDUILibrary = {}
local TweenService = game:GetService("TweenService")

local TWEEN_INFO = TweenInfo.new(
    0.3, -- Duration
    Enum.EasingStyle.Sine,
    Enum.EasingDirection.InOut,
    0,
    false,
    0
)

function ThreeDUILibrary.CreateButton(parent, text, position, size)
    local buttonFrame = Instance.new("Frame")
    buttonFrame.Size = size or UDim2.new(0, 150, 0, 50)
    buttonFrame.Position = position or UDim2.new(0.5, -75, 0.5, -25)
    buttonFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    buttonFrame.BorderSizePixel = 0
    buttonFrame.Parent = parent

    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(100, 100, 100)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(30, 30, 30))
    })
    gradient.Rotation = 45
    gradient.Parent = buttonFrame

    local shadow = Instance.new("ImageLabel")
    shadow.Size = UDim2.new(1, 10, 1, 10)
    shadow.Position = UDim2.new(0, 5, 0, 5)
    shadow.BackgroundTransparency = 1
    shadow.Image = "rbxassetid://131604521"
    shadow.ImageTransparency = 0.5
    shadow.Parent = buttonFrame

    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.Text = text or "Button"
    textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    textLabel.TextScaled = true
    textLabel.Font = Enum.Font.GothamBold
    textLabel.Parent = buttonFrame

    local function hoverEffect()
        local tween = TweenService:Create(
            buttonFrame,
            TWEEN_INFO,
            {UIScale = 1.1, BackgroundColor3 = Color3.fromRGB(70, 70, 70)}
        )
        tween:Play()
    end

    local function unhoverEffect()
        local tween = TweenService:Create(
            buttonFrame,
            TWEEN_INFO,
            {UIScale = 1, BackgroundColor3 = Color3.fromRGB(50, 50, 50)}
        )
        tween:Play()
    end

    local function clickEffect()
        local tween = TweenService:Create(
            buttonFrame,
            TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.In),
            {UIScale = 0.95}
        )
        tween:Play()
        tween.Completed:Connect(function()
            TweenService:Create(
                buttonFrame,
                TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
                {UIScale = 1}
            ):Play()
        end)
    end

    buttonFrame.MouseEnter:Connect(hoverEffect)
    buttonFrame.MouseLeave:Connect(unhoverEffect)
    buttonFrame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            clickEffect()
        end
    end)

    return buttonFrame
end

function ThreeDUILibrary.CreatePanel(parent, position, size)
    local panelFrame = Instance.new("Frame")
    panelFrame.Size = size or UDim2.new(0, 300, 0, 200)
    panelFrame.Position = position or UDim2.new(0.5, -150, 1, 0)
    panelFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    panelFrame.BorderSizePixel = 0
    panelFrame.Parent = parent

    local border = Instance.new("Frame")
    border.Size = UDim2.new(1, 10, 1, 10)
    border.Position = UDim2.new(0, -5, 0, -5)
    border.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    border.ZIndex = -1
    border.Parent = panelFrame

    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(80, 80, 80)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 20, 20))
    })
    gradient.Parent = panelFrame

    local tween = TweenService:Create(
        panelFrame,
        TWEEN_INFO,
        {Position = UDim2.new(0.5, -150, 0.5, -100)}
    )
    tween:Play()

    return panelFrame
end

