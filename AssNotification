local NotificationLibrary = {}
NotificationLibrary.__index = NotificationLibrary

local TweenService = game:GetService("TweenService")
local SoundService = game:GetService("SoundService")
local Players = game:GetService("Players")

-- Default settings (customizable per notification)
local DefaultSettings = {
    Position = UDim2.new(1, -20, 1, -20),  -- Bottom right
    AnchorPoint = Vector2.new(1, 1),
    Size = UDim2.new(0, 300, 0, 80),
    BackgroundColor = Color3.fromRGB(40, 40, 40),
    BorderColor = Color3.fromRGB(60, 60, 60),
    TextColor = Color3.fromRGB(255, 255, 255),
    TitleFont = Enum.Font.GothamBold,
    DescFont = Enum.Font.Gotham,
    TitleSize = 18,
    DescSize = 14,
    Duration = 5,  -- Seconds
    FadeInTime = 0.3,
    FadeOutTime = 0.3,
    SlideInTime = 0.5,
    SlideOutTime = 0.5,
    SlideDistance = 50,  -- Pixels to slide from right
    CornerRadius = 8,
    ShadowEnabled = true,
    ShadowTransparency = 0.5,
    ShadowSize = 10,
    SoundId = "rbxassetid://4590657391",  -- Default notification sound
    QueueEnabled = true,
    MaxQueue = 5,  -- Max visible at once
    Spacing = 10,  -- Space between notifications
    Buttons = {},  -- {Text = "Button", Callback = function()}
    OnClickCallback = nil,  -- Called on notification click
    OnDismissCallback = nil,  -- Called on dismiss
    Icon = nil,  -- ImageLabel image
    ProgressBar = false,  -- Show progress bar
    Theme = "Dark"  -- "Dark", "Light", or custom function
}

-- Active notifications queue
local ActiveNotifications = {}
local NotificationParent

-- Apply theme to settings
local function ApplyTheme(settings)
    if settings.Theme == "Dark" then
        settings.BackgroundColor = Color3.fromRGB(40, 40, 40)
        settings.BorderColor = Color3.fromRGB(60, 60, 60)
        settings.TextColor = Color3.fromRGB(255, 255, 255)
    elseif settings.Theme == "Light" then
        settings.BackgroundColor = Color3.fromRGB(240, 240, 240)
        settings.BorderColor = Color3.fromRGB(200, 200, 200)
        settings.TextColor = Color3.fromRGB(0, 0, 0)
    elseif typeof(settings.Theme) == "function" then
        settings.Theme(settings)
    end
end

-- Create ScreenGui parent
local function GetNotificationParent()
    if not NotificationParent then
        NotificationParent = Instance.new("ScreenGui")
        NotificationParent.Name = "CustomNotifications"
        NotificationParent.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")
        NotificationParent.IgnoreGuiInset = true
    end
    return NotificationParent
end

-- Create notification UI
local function CreateNotificationUI(options)
    local settings = table.clone(DefaultSettings)
    for k, v in pairs(options) do settings[k] = v end
    ApplyTheme(settings)

    local frame = Instance.new("Frame")
    frame.Size = settings.Size
    frame.Position = settings.Position + UDim2.new(0, settings.SlideDistance, 0, 0)
    frame.AnchorPoint = settings.AnchorPoint
    frame.BackgroundColor3 = settings.BackgroundColor
    frame.BorderColor3 = settings.BorderColor
    frame.BorderSizePixel = 1
    frame.BackgroundTransparency = 1
    frame.Parent = GetNotificationParent()

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, settings.CornerRadius)
    corner.Parent = frame

    if settings.ShadowEnabled then
        local shadow = Instance.new("UIStroke")
        shadow.Transparency = settings.ShadowTransparency
        shadow.Thickness = settings.ShadowSize
        shadow.Color = Color3.fromRGB(0, 0, 0)
        shadow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        shadow.Parent = frame
    end

    local title = Instance.new("TextLabel")
    title.Text = options.Title or "Notification"
    title.Font = settings.TitleFont
    title.TextSize = settings.TitleSize
    title.TextColor3 = settings.TextColor
    title.Size = UDim2.new(1, 0, 0, 20)
    title.Position = UDim2.new(0, 10, 0, 5)
    title.BackgroundTransparency = 1
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.TextTransparency = 1
    title.Parent = frame

    local desc = Instance.new("TextLabel")
    desc.Text = options.Description or ""
    desc.Font = settings.DescFont
    desc.TextSize = settings.DescSize
    desc.TextColor3 = settings.TextColor
    desc.Size = UDim2.new(1, 0, 1, -30)
    desc.Position = UDim2.new(0, 10, 0, 25)
    desc.BackgroundTransparency = 1
    desc.TextXAlignment = Enum.TextXAlignment.Left
    desc.TextWrapped = true
    desc.TextTransparency = 1
    desc.Parent = frame

    if settings.Icon then
        local icon = Instance.new("ImageLabel")
        icon.Image = settings.Icon
        icon.Size = UDim2.new(0, 40, 0, 40)
        icon.Position = UDim2.new(0, 10, 0, 20)
        icon.BackgroundTransparency = 1
        icon.ImageTransparency = 1
        icon.Parent = frame
        title.Position = UDim2.new(0, 60, 0, 5)
        desc.Position = UDim2.new(0, 60, 0, 25)
    end

    local buttonContainer = Instance.new("Frame")
    buttonContainer.Size = UDim2.new(1, 0, 0, 20)
    buttonContainer.Position = UDim2.new(0, 0, 1, -25)
    buttonContainer.BackgroundTransparency = 1
    buttonContainer.Parent = frame

    local buttonLayout = Instance.new("UIListLayout")
    buttonLayout.FillDirection = Enum.FillDirection.Horizontal
    buttonLayout.HorizontalAlignment = Enum.HorizontalAlignment.Right
    buttonLayout.Padding = UDim.new(0, 5)
    buttonLayout.Parent = buttonContainer

    for _, btn in ipairs(settings.Buttons) do
        local button = Instance.new("TextButton")
        button.Text = btn.Text or "Button"
        button.Font = settings.TitleFont
        button.TextSize = 14
        button.TextColor3 = settings.TextColor
        button.BackgroundColor3 = settings.BorderColor
        button.Size = UDim2.new(0, 80, 1, 0)
        button.TextTransparency = 1
        button.BackgroundTransparency = 1
        button.Parent = buttonContainer
        button.MouseButton1Click:Connect(function()
            if btn.Callback then btn.Callback() end
            frame:Destroy()
        end)
    end

    local progressBar
    if settings.ProgressBar then
        progressBar = Instance.new("Frame")
        progressBar.Size = UDim2.new(1, 0, 0, 2)
        progressBar.Position = UDim2.new(0, 0, 1, -2)
        progressBar.BackgroundColor3 = settings.TextColor
        progressBar.BackgroundTransparency = 1
        local fill = Instance.new("Frame")
        fill.Size = UDim2.new(1, 0, 1, 0)
        fill.BackgroundColor3 = settings.TextColor
        fill.Parent = progressBar
        progressBar.Parent = frame
    end

    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            if settings.OnClickCallback then settings.OnClickCallback() end
            frame:Destroy()
        end
    end)

    return frame, settings, progressBar
end

-- Animate in
local function AnimateIn(frame, settings)
    local slideGoal = {Position = settings.Position}
    local fadeGoal = {BackgroundTransparency = 0}
    TweenService:Create(frame, TweenInfo.new(settings.SlideInTime, Enum.EasingStyle.Quint, Enum.EasingDirection.Out), slideGoal):Play()
    TweenService:Create(frame, TweenInfo.new(settings.FadeInTime, Enum.EasingStyle.Linear), fadeGoal):Play()
    for _, child in ipairs(frame:GetChildren()) do
        if child:IsA("TextLabel") or child:IsA("TextButton") or child:IsA("ImageLabel") then
            TweenService:Create(child, TweenInfo.new(settings.FadeInTime), {TextTransparency = 0, ImageTransparency = 0}):Play()
        elseif child:IsA("Frame") and child.Name ~= "ProgressBar" then
            TweenService:Create(child, TweenInfo.new(settings.FadeInTime), {BackgroundTransparency = 0}):Play()
        end
    end
end

-- Animate out
local function AnimateOut(frame, settings, callback)
    local slideGoal = {Position = settings.Position + UDim2.new(0, settings.SlideDistance, 0, 0)}
    local fadeGoal = {BackgroundTransparency = 1}
    local slideTween = TweenService:Create(frame, TweenInfo.new(settings.SlideOutTime, Enum.EasingStyle.Quint, Enum.EasingDirection.In), slideGoal)
    local fadeTween = TweenService:Create(frame, TweenInfo.new(settings.FadeOutTime, Enum.EasingStyle.Linear), fadeGoal)
    slideTween:Play()
    fadeTween:Play()
    for _, child in ipairs(frame:GetChildren()) do
        if child:IsA("TextLabel") or child:IsA("TextButton") or child:IsA("ImageLabel") then
            TweenService:Create(child, TweenInfo.new(settings.FadeOutTime), {TextTransparency = 1, ImageTransparency = 1}):Play()
        elseif child:IsA("Frame") then
            TweenService:Create(child, TweenInfo.new(settings.FadeOutTime), {BackgroundTransparency = 1}):Play()
        end
    end
    fadeTween.Completed:Connect(function()
        frame:Destroy()
        if callback then callback() end
    end)
end

-- Update queue positions
local function UpdateQueuePositions()
    local yOffset = 0
    for i = #ActiveNotifications, 1, -1 do
        local notif = ActiveNotifications[i]
        local targetPos = DefaultSettings.Position - UDim2.new(0, 0, 0, yOffset + notif.Frame.Size.Y.Offset + DefaultSettings.Spacing)
        TweenService:Create(notif.Frame, TweenInfo.new(0.3, Enum.EasingStyle.Quint), {Position = targetPos}):Play()
        yOffset = yOffset + notif.Frame.Size.Y.Offset + DefaultSettings.Spacing
    end
end

-- Create a new notification
function NotificationLibrary:Create(options)
    if DefaultSettings.QueueEnabled and #ActiveNotifications >= DefaultSettings.MaxQueue then
        local oldest = table.remove(ActiveNotifications, 1)
        AnimateOut(oldest.Frame, oldest.Settings, function()
            if oldest.Settings.OnDismissCallback then oldest.Settings.OnDismissCallback() end
            UpdateQueuePositions()
        end)
    end

    local frame, settings, progressBar = CreateNotificationUI(options)
    local notif = {Frame = frame, Settings = settings}
    table.insert(ActiveNotifications, notif)
    UpdateQueuePositions()

    if settings.SoundId then
        local sound = Instance.new("Sound")
        sound.SoundId = settings.SoundId
        sound.Volume = 0.5
        sound.Parent = SoundService
        sound:Play()
        sound.Ended:Connect(function() sound:Destroy() end)
    end

    AnimateIn(frame, settings)

    if progressBar then
        local fill = progressBar:FindFirstChildOfClass("Frame")
        TweenService:Create(progressBar, TweenInfo.new(settings.FadeInTime), {BackgroundTransparency = 0}):Play()
        TweenService:Create(fill, TweenInfo.new(settings.Duration, Enum.EasingStyle.Linear), {Size = UDim2.new(0, 0, 1, 0)}):Play()
    end

    task.delay(settings.Duration, function()
        if frame.Parent then
            AnimateOut(frame, settings, function()
                local index = table.find(ActiveNotifications, notif)
                if index then table.remove(ActiveNotifications, index) end
                UpdateQueuePositions()
                if settings.OnDismissCallback then settings.OnDismissCallback() end
            end)
        end
    end)
end

-- Clear all notifications
function NotificationLibrary:ClearAll()
    for _, notif in ipairs(ActiveNotifications) do
        AnimateOut(notif.Frame, notif.Settings, function()
            if notif.Settings.OnDismissCallback then notif.Settings.OnDismissCallback() end
        end)
    end
    ActiveNotifications = {}
end

return NotificationLibrary= UDim2.new(0, 400, 0, 300)}):Play()
        wait(1)
    end
end)

